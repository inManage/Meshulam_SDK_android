<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding
                android:bottom="2dp"
                android:left="1dp"
                android:right="1dp"
                android:top="0dp" />

            <solid android:color="#00CCCCCC" />

            <corners android:radius="40dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="2dp"
                android:left="1dp"
                android:right="0dp"
                android:top="0dp" />

            <solid android:color="#10CCCCCC" />

            <corners android:radius="40dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="2dp"
                android:left="1dp"
                android:right="0dp"
                android:top="0dp" />

            <solid android:color="#20CCCCCC" />

            <corners android:radius="40dp" />
        </shape>
    </item>
    <item>
        <shape>40dp</shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="2dp"
                android:left="1dp"
                android:right="0dp"
                android:top="0dp" />

            <solid android:color="#50CCCCCC" />

            <corners android:radius="40dp" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@android:color/white" />
            <corners android:radius="40dp" />
            <stroke
                android:color="#0284bc"
                android:width="2dp" />
        </shape>
    </item>

    <item>

        <!-- onClickColor -->
        <ripple xmlns:tools="http://schemas.android.com/tools"
            android:color="#0284bc"
            tools:targetApi="lollipop">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="#0284bc" />
                </shape>
            </item>
        </ripple>

    </item>

</layer-list>